---
interface Props {
  title?: string;
  text?: string;
}

const { 
  title = "About me", 
  text = "I am a Trial Attorney and writer exploring how technology makes justice accessible." 
} = Astro.props;
---

<div class="h-full flex flex-col justify-center bg-white/50 backdrop-blur-sm border border-stone-200/50 rounded-3xl p-8 md:p-12 shadow-sm hover:shadow-md transition-shadow">
  
    <!-- Image -->
    <div class="flex justify-center mb-8">
      <div class="relative w-48 h-48 md:w-56 md:h-56">
        <div class="absolute inset-0 bg-sage/20 rounded-[2.5rem] animate-pulse"></div>
        <div class="absolute inset-4 bg-sage/40 rounded-[2rem]"></div>
        <div class="relative z-10 w-full h-full rounded-[2.5rem] border-4 border-white shadow-xl overflow-hidden bg-stone-200">
             <img src="/ben_headshot_isolated.png" alt="Ben Lovell" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>

    <!-- Text -->
    <div class="text-center">
      <h2 class="text-3xl font-bold text-charcoal mb-4">{title}</h2>
      <p class="text-lg text-charcoal/80 mb-6 leading-relaxed font-body" set:html={text}>
      </p>
      
      <a href="/about" class="inline-flex items-center text-sage font-bold hover:text-adobe transition-colors">
        Read Full Bio <span class="ml-2">&rarr;</span>
      </a>
    </div>

</div>
