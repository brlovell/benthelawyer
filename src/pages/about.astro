---
import Layout from '../layouts/Layout.astro';
import { getEntry, render } from 'astro:content';

const aboutPage = await getEntry('pages', 'about');
if (!aboutPage) return Astro.redirect('/404');

const { Content } = await render(aboutPage);
const { data: about } = aboutPage;
const experience = about.experience || [];
const education = about.education || [];
---

<Layout title="About Ben | Advocate. Researcher. Teacher.">
  <main class="bg-canvas min-h-screen">
    <!-- Header -->
    <header class="bg-adobe text-white py-20 px-6 overflow-hidden relative">
      <!-- Background SVG -->
      <div class="absolute inset-0 z-0 opacity-10 pointer-events-none">
        <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-full object-cover">
          <circle cx="20" cy="20" r="40" fill="white" />
          <circle cx="80" cy="80" r="30" fill="white" />
        </svg>
      </div>

      <div class="max-w-6xl mx-auto relative z-10 flex flex-col md:flex-row items-center gap-12">
        <!-- Headshot -->
        <div class="w-48 h-48 md:w-64 md:h-64 flex-shrink-0">
          <div class="relative w-full h-full rounded-[3rem] border-4 border-white/30 shadow-2xl overflow-hidden bg-white/20 backdrop-blur-sm p-4">
             <img src="/ben_headshot_isolated.png" alt="Ben Lovell" class="w-full h-full object-cover rounded-[2.5rem]" />
          </div>
        </div>

        <div class="text-center md:text-left">
          <h1 class="text-5xl md:text-6xl font-bold mb-6">{about.headerTitle || "Advocate. Researcher. Teacher."}</h1>
          <p class="text-xl md:text-2xl opacity-90 leading-relaxed font-body max-w-2xl">
            {about.description}
          </p>
        </div>
      </div>
    </header>

    <!-- Content Grid -->
    <div class="max-w-7xl mx-auto px-6 py-24 grid lg:grid-cols-12 gap-16">
      
      <!-- Bio Section (Left - 6 cols) -->
      <section class="lg:col-span-6">
        <h2 class="text-3xl font-bold text-charcoal mb-8 border-b-2 border-sage/20 pb-4">A bit about me</h2>
        <div class="prose prose-lg prose-stone max-w-none text-charcoal/80">
          <Content />
        </div>
      </section>

      <!-- Right Side (Timeline - 6 cols) -->
      <div class="lg:col-span-6 space-y-16">
        <!-- Experience -->
        <section>
          <h2 class="text-3xl font-bold text-charcoal mb-8 border-b-2 border-sage/20 pb-4">Experience</h2>
          <div class="space-y-8">
            {experience.map((item) => (
              <div class="relative pl-8 border-l-2 border-sage/30">
                <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-canvas border-4 border-sage"></div>
                <span class="text-sm font-bold text-sage uppercase tracking-wider block mb-1">{item.year}</span>
                <h3 class="text-xl font-bold text-charcoal">{item.role}</h3>
                <div class="text-adobe font-medium mb-2">{item.org}</div>
                <p class="text-charcoal/70 leading-relaxed">{item.desc}</p>
              </div>
            ))}
          </div>
        </section>

        <!-- Education -->
        <section>
          <h2 class="text-3xl font-bold text-charcoal mb-8 border-b-2 border-sage/20 pb-4">Education</h2>
          <div class="space-y-8">
            {education.map((item) => (
              <div class="relative pl-8 border-l-2 border-sky/30">
                <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-canvas border-4 border-sky"></div>
                <span class="text-sm font-bold text-sky uppercase tracking-wider block mb-1">{item.year}</span>
                <h3 class="text-xl font-bold text-charcoal">{item.degree}</h3>
                <div class="text-adobe font-medium">{item.org}</div>
              </div>
            ))}
          </div>
        </section>
      </div>

    </div>
  </main>
</Layout>
